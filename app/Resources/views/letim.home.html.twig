{% extends "template.html.twig" %}

{% block template %}
    <div class="top_news">
        {% block lastnews %}
            {% render controller("LetimNewsBundle:Default:lastNews") %}
        {% endblock %}
    </div>


    <div id="slider-wrapper">
        <div id="slider" class="nivoSlider">
            <img src="/letim/images/slide1.jpg" alt="" title="#htmlcaption1"/>
            <img src="/letim/images/slide2.jpg" alt="" title="#htmlcaption2"/>
            <img src="/letim/images/slide3.jpg" alt="" title="#htmlcaption3"/>
            <img src="/letim/images/slide4.jpg" alt="" title="#htmlcaption4"/>
        </div>
        <div id="htmlcaption1" class="nivo-html-caption"><a href="" class="but1" title="">Заказать сертификат</a>
        </div>

        <div id="htmlcaption2" class="nivo-html-caption"><a href="" class="but2" title="">Перейти к календарю</a>
        </div>

        <div id="htmlcaption3" class="nivo-html-caption"><a href="" class="but3" title="">Заказать сертификат</a>
        </div>

        <div id="htmlcaption4" class="nivo-html-caption"></div>
    </div>


    <!--start main-->
    <div id="wrapper">
        <!--start right_bar-->
        <div id="right_bar">


            <div class="zagolovok">Галерея</div>

            <ul class="gallery">
                <li><a href="" title=""><img src="/letim/images/pic2.jpg" alt=""/></a></li>
                <li><a href="" title=""><img src="/letim/images/pic3.jpg" alt=""/></a></li>
            </ul>
        </div>
        <!--end right_bar-->
        <!--start left_bar-->
        <div id="left_bar">

            <div class="zagolovok">Отзывы</div>
            {% render controller("LetimReviewBundle:Default:list", {'tpl': 'small', 'limit': 2}) %}
        </div>
        <!--end left_bar-->
        <!--start content-->
        {% block content %}

        {% endblock %}
        <!--end content-->

        <!--start bottom_bar-->
        {% include "sendForm.html.twig" %}
        <!--end bottom_bar-->
    </div>


{% endblock %}

