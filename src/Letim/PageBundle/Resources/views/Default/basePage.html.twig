{% extends "::letim.base.html.twig" %}
{% block content %}
    <div id="content">
        <div class="zagolovok2">{{page.title}}</div>
        {% autoescape false %}
            {{page.text}}
        {% endautoescape %}
        {% block news %}
            {% if page is defined %}
                {% render controller("LetimNewsBundle:Default:news",{'id': page.id}) %}
            {% endif %}
        {% endblock %}
        {% block fac %}
            {% if page is defined %}
                {% render controller("LetimFaqBundle:Default:faq",{'id': page.id}) %}
            {% endif %}
        {% endblock %}
    </div>
{% endblock %}