<dl id="faqs">
{% for question in questions %}
     <dt>{{ question.question |striptags | raw }}</dt>
    <dd>{{ question.answer |striptags | raw}}</dd>
{% endfor %}
</dl>

{% block javascripts %}
    <script type="text/javascript">
        $("#faqs dd").hide();
        $("#faqs dt").click(function () {
            $(this).next("#faqs dd").slideToggle(500);
            $(this).toggleClass("expanded");
        });
    </script>
{% endblock %}